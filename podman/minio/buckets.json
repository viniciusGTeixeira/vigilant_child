{
    "buckets": [
        {
            "name": "raw-images",
            "policy": "private",
            "quota": null,
            "retention": {
                "mode": "compliance",
                "validity": "30d"
            },
            "description": "Imagens brutas das c칙meras"
        },
        {
            "name": "processed-images",
            "policy": "private",
            "quota": null,
            "retention": {
                "mode": "compliance",
                "validity": "90d"
            },
            "description": "Imagens ap칩s processamento"
        },
        {
            "name": "models",
            "policy": "private",
            "quota": null,
            "retention": {
                "mode": "governance",
                "validity": "365d"
            },
            "description": "Modelos treinados e checkpoints"
        },
        {
            "name": "reports",
            "policy": "private",
            "quota": null,
            "retention": {
                "mode": "compliance",
                "validity": "180d"
            },
            "description": "Relat칩rios e an치lises geradas"
        }
    ],
    "policies": {
        "private": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Principal": {
                        "AWS": ["arn:aws:iam::*:root"]
                    },
                    "Action": [
                        "s3:GetBucketLocation",
                        "s3:ListBucket",
                        "s3:ListBucketMultipartUploads"
                    ],
                    "Resource": ["arn:aws:s3:::*"]
                },
                {
                    "Effect": "Allow",
                    "Principal": {
                        "AWS": ["arn:aws:iam::*:root"]
                    },
                    "Action": [
                        "s3:GetObject",
                        "s3:PutObject",
                        "s3:DeleteObject",
                        "s3:ListMultipartUploadParts",
                        "s3:AbortMultipartUpload"
                    ],
                    "Resource": ["arn:aws:s3:::*/*"]
                }
            ]
        }
    },
    "lifecycle_rules": {
        "raw-images": [
            {
                "id": "expire-old-raw-images",
                "status": "Enabled",
                "filter": {
                    "prefix": ""
                },
                "expiration": {
                    "days": 30
                }
            }
        ],
        "processed-images": [
            {
                "id": "expire-old-processed-images",
                "status": "Enabled",
                "filter": {
                    "prefix": ""
                },
                "expiration": {
                    "days": 90
                }
            }
        ]
    }
} 