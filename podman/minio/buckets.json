{
    "buckets": [
        {
            "name": "raw-images",
            "policy": "private",
            "quota": {
                "enabled": true,
                "quota_type": "hard",
                "amount": "500GB"
            },
            "lifecycle_rules": [
                {
                    "id": "expire-old-images",
                    "enabled": true,
                    "expiry_days": 30,
                    "prefix": ""
                }
            ],
            "description": "Imagens brutas das câmeras"
        },
        {
            "name": "processed-images",
            "policy": "private",
            "quota": {
                "enabled": true,
                "quota_type": "hard",
                "amount": "1TB"
            },
            "lifecycle_rules": [
                {
                    "id": "expire-old-processed",
                    "enabled": true,
                    "expiry_days": 90,
                    "prefix": ""
                }
            ],
            "description": "Imagens processadas e anotadas"
        },
        {
            "name": "models",
            "policy": "private",
            "versioning": true,
            "quota": {
                "enabled": true,
                "quota_type": "hard",
                "amount": "50GB"
            },
            "description": "Modelos treinados e checkpoints"
        },
        {
            "name": "reports",
            "policy": "private",
            "quota": {
                "enabled": true,
                "quota_type": "hard",
                "amount": "100GB"
            },
            "lifecycle_rules": [
                {
                    "id": "archive-old-reports",
                    "enabled": true,
                    "transition_days": 30,
                    "transition_storage": "ARCHIVE",
                    "prefix": ""
                }
            ],
            "description": "Relatórios e análises geradas"
        }
    ],
    "policies": {
        "raw-images": {
            "read": ["analyzer-service"],
            "write": ["camera-service"]
        },
        "processed-images": {
            "read": ["web-service", "report-service"],
            "write": ["analyzer-service"]
        },
        "models": {
            "read": ["analyzer-service", "training-service"],
            "write": ["training-service"]
        },
        "reports": {
            "read": ["web-service"],
            "write": ["report-service", "analyzer-service"]
        }
    },
    "retention": {
        "raw-images": "30d",
        "processed-images": "90d",
        "models": "unlimited",
        "reports": {
            "hot": "30d",
            "archive": "1y"
        }
    }
} 